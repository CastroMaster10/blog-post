<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header') -%>
<body>
    <!-- Navigation -->
    <%- include('layouts/navbar'); -%>

<!-- Page Header -->
<header class="masthead" style="background-image: url('img/home-bg.jpg'); height: 950px;">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
        
          <div class="site-heading">
            <h1>User Register</h1>
            <span class="subheading">A place to share your adventures</span>
            <form action= "/user/register" method="POST" style="margin-top: 100px;">
              <%if(errors != null && errors.length > 0) { %>
                <ul style="margin-bottom: 30px;" class="list-group">
                  <% for(var i = 0; i < errors.length; i++) { %>
                    <li  class="list-group-item list-group-item-danger"> <%= errors[i] %> </li>
                    <% } %>
                </ul>
                <% } %>
                <div class="form-group">
                  <input type="text" class="form-control" id="username" placeholder="Username" name="username" value="<%= username%>">

                </div>
                <div class="form-group" style="margin-top: 30px;">
                  <input type="password" class="form-control" id="password" placeholder="Password" name="password" value="<%= password%>">
                </div>
                <div class="form-group form-check">
                  <input type="checkbox" class="form-check-input" id="exampleCheck1">
                  <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top: 150px;">Submit</button>
              </form>
          </div>
        </div>
      </div>
    </div>
  </header>


<%- include('layouts/footer'); -%>

<%- include('layouts/scripts'); -%>

</body>
</html>

  